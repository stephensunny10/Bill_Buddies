<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/btn_grey"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/leger_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filledTextAddress">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLedger_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawablePadding="8dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:hint="Parent Category"
                android:maxLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Invoice_id"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filledTextAddressDeatils">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInvoice_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawablePadding="8dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:hint="Category Name"
                android:maxLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btsubmit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/btn_red_gradient"
            android:text="@string/submit"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>