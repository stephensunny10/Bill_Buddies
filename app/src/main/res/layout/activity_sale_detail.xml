<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Sale.SaleDetailA">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_white"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_24" />


                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_back"
                    android:text="@string/sale_detail"
                    android:textColor="@color/deep_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:outlineSpotShadowColor="#E175D343"
            >

            <LinearLayout
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_border_green"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/sales_date"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_sale_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/sales_invoice_id"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_sales_invoice_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/sale_status"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_sale_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/customer_name"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/reference_no"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_reference_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/total"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/paid"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/due"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_due"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/payment_status"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_payment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/share"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                        android:layout_weight="0.8"
                        android:text="@string/action"
                        android:textColor="@color/light_black"
                       />

                    <TextView
                        android:id="@+id/et_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                        android:textSize="@dimen/sp16"
                      android:layout_weight="1.2"
                        android:text="@string/sales_date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                       />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</LinearLayout>