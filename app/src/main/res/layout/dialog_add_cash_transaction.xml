<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/btn_grey"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_border_input"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <EditText
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_weight="0.6"
                android:padding="6dp"
                android:hint="dd-mm-yyyy"
               />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_weight="0.4"
                android:padding="6dp"
                android:src="@drawable/calendar"/>



        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mode_of_cash"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filledTextAddress">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_mode_of_cash"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawablePadding="8dp"
                android:background="@color/white"
                android:padding="6dp"
                android:hint="Mode of cash"
                android:maxLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filledTextAddressDeatils">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawablePadding="8dp"
                android:background="@color/white"
                android:hint="Amount"
                android:padding="6dp"
                android:maxLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filledTextAddressDeatils">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etnotes"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawablePadding="8dp"
                android:background="@color/white"
                android:hint="Notes"
                android:padding="6dp"
                android:maxLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btsubmit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/btn_red_gradient"
            android:text="@string/submit"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>